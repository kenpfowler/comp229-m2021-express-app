{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonJS",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "exclude": ["node_modules"]
}
